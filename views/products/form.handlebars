{{#if isEdit}}
<h1>Edit Product</h1>
{{else}}
<h1>Add New Product</h1>
{{/if}}

<form action="/products/upsert" method="post">
  {{#if product}}
  <input type="hidden" name="productid" value="{{product.productid}}">
  {{/if}}
  
  <div>
    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" value="{{product.name}}" required>
  </div>
  
  <div>
    <label for="price">Price:</label>
    <input type="number" step="0.01" id="price" name="price" value="{{product.price}}" required>
  </div>
  
  <div>
    <label for="size">Available Sizes:</label>
    <input type="text" id="size" name="size" value="{{product.size}}">
  </div>
  
  <button type="submit">Save Product</button>
</form>

<p><a href="/products">Back to Products</a></p>