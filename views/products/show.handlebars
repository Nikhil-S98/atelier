<h1>Product Details</h1>

<div class="product-details">
  <h2>{{product.name}}</h2>
  
  <p><strong>Price:</strong> ${{product.price}}</p>
  
  {{#if product.size}}
    <p><strong>Available Sizes:</strong> {{product.size}}</p>
  {{/if}}
  
  {{#if currentUser}}
  <div class="product-actions">
    <a href="/products/edit?id={{product.productid}}">Edit</a> | 
    <a href="/products/delete/{{product.productid}}" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
  </div>
  {{/if}}
</div>

<p><a href="/products">Back to Products</a></p>